# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/paper_reviewer
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/paper_reviewer

# JWT Secrets (change these in production!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# LLM Configuration
LLM_PROVIDER=openai
# Options: openai, local (for future local model support)
LLM_MODEL=gpt-4-turbo-preview
# For cheaper option: gpt-3.5-turbo

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
# Dimensions for embeddings
EMBEDDING_DIMENSIONS=1536

# File Upload
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_DIR=uploads

# Rate Limiting (optional, for future implementation)
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
